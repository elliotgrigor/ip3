//Function to add all the shifts to the table for the specific day - pass in a list of shifts 
mixin loopShifts(staffSchedule, weekStart)
    each person in staffSchedule
        tr
            td= person.name 
            td
                if person.mon
                    a(href=`/rota/${weekStart}/mon/${person.staffId}/edit`)= person.mon 
                else 
                    a(href=`/rota/${weekStart}/mon/${person.staffId}/add`) ----
            td 
                if person.tue
                    a(href=`/rota/${weekStart}/tue/${person.staffId}/edit`)= person.tue
                else 
                    a(href=`/rota/${weekStart}/tue/${person.staffId}/add`) ----
            td 
                if person.wed
                    a(href=`/rota/${weekStart}/wed/${person.staffId}/edit`)= person.wed 
                else 
                    a(href=`/rota/${weekStart}/wed/${person.staffId}/add`) ---- 
            td 
                if person.thu
                    a(href=`/rota/${weekStart}/thu/${person.staffId}/edit`)= person.thu
                else 
                    a(href=`/rota/${weekStart}/thu/${person.staffId}/add`) ----
            td 
                if person.fri
                    a(href=`/rota/${weekStart}/fri/${person.staffId}/edit`)= person.fri 
                else 
                    a(href=`/rota/${weekStart}/fri/${person.staffId}/add`) ---- 
            td 
                if person.sat
                    a(href=`/rota/${weekStart}/sat/${person.staffId}/edit`)= person.sat 
                else 
                    a(href=`/rota/${weekStart}/sat/${person.staffId}/add`) ----
            td 
                if person.sun
                    a(href=`/rota/${weekStart}/sun/${person.staffId}/edit`)= person.sun
                else 
                    a(href=`/rota/${weekStart}/sun/${person.staffId}/add`) ----

