//Page which shows the details of the currently logged in employee/manager

//Is basically the same as the edit details page except all input is readonly

include includes/header.pug
div#page-container 
    include includes/nav
    div#content-container
        div(class="flex-row-container centre-flex-row-items" style="margin-top: var(--medium-px)")
            div(class="title-text-box blue-title-text-box" style="padding: var(--medium-px); margin: 0px var(--medium-px) 0px var(--medium-px); hyphens: none;").
                My Details 
        div(class="scroll-flex-row-container centre-flex-row-items" style="margin-top: var(--medium-px)")
            form(class="vertical-form")
                div(style="height: 320px")
                    label(for="firstName") First Name 
                    label(for="lastName") Last Name
                    label(for="address") Address
                    label(for="phoneNumber") Phone Number 
                    label(for="dateOfBirth") Date of Birth 
                    label(for="emergencyPhoneNumber") Emergency Number
                div(style="width: 15vw; min-width: 150px; height: 270px")   
                    input(type="text" name="employeeFirstName" placeholder=`${loggedInUser.firstName}` readonly)  
                    input(type="text" name="employeeLastName" placeholder=`${loggedInUser.lastName}` readonly) 
                    input(type="text" name="employeeAddress" placeholder=`${loggedInUser.address}` readonly) 
                    input(type="text" name="employeePhoneNumber" placeholder=`${loggedInUser.phoneNumber}` readonly) 
                    input(type="text" name="employeeDateOfBirth" placeholder=`${loggedInUser.dateOfBirth}` readonly) 
                    input(type="text" name="employeeEmergencyNumber" placeholder=`${loggedInUser.emergencyNumber}` readonly)
                div 
                    a(class="primary-button" href="editDetails.html") Edit Details
                    a(class="secondary-button" href="index.html") Home