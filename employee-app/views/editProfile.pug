include includes/header
include includes/nav
.flex-row-container.centre-flex-row-items(style='margin-top: var(--medium-px)')
  .title-text-box.blue-title-text-box(style='padding: var(--medium-px); margin: 0px var(--medium-px) 0px var(--medium-px); hyphens: none;')
    | Edit My Details
.scroll-flex-row-container.centre-flex-row-items(style='margin-top: var(--medium-px)')
  form.vertical-form(action="/profile/edit" method="POST")
    div(style='height: 500px')
      label(for='firstName') First Name
      label(for='lastName') Last Name
      label(for='dateOfBirth') Date of Birth
      label(for='gender') Gender
      label(for='phoneNo') Phone Number
      label(for='email') Email
      label(for='houseNo') House Number
      label(for='street') Street
      label(for='postCode') Post Code
      label(for='city') City
    div(style='width: 15vw; min-width: 150px; height: 500px')
      input(type='text' name='firstName' value=`${user.firstName}`)
      input(type='text' name='lastName' value=`${user.lastName}`)
      input(type='text' name='dateOfBirth' value=`${user.dateOfBirth}` readonly='')
      select(name="gender" id="gender")
        if loggedInUser.gender == 'F'
          option(value="F" selected="selected") Female
          option(value="M") Male
          option(value="O") Other
        if loggedInUser.gender == 'M'
          option(value="F") Female
          option(value="M" selected="selected") Male
          option(value="O") Other
        if loggedInUser.gender == 'O'
          option(value="F") Female
          option(value="M") Male
          option(value="O" selected="selected") Other
      input(type='text' name='phoneNo' value=`${user.contact.phone}`)
      input(type='text' name='email' value=`${user.contact.email}`)
      input(type='text' name='houseNo' value=`${user.contact.address.houseNumber}`)
      input(type='text' name='street' value=`${user.contact.address.street}`)
      input(type='text' name='postCode' value=`${user.contact.address.postCode}`)
      input(type='text' name='city' value=`${user.contact.address.city}`)
    div
      button.primary-button(type="submit") Update
      a.secondary-button(href='staffProfile.html' onclick='') Cancel
